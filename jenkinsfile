pipeline {

        agent {label 'slave 1'}
        tools { 
        maven 'maven' 
        jdk 'java'
        }
        stages {
                stage ('build') {
                        steps {
                                echo 'build'
                                sh 'mvn clean compile'
                                }
                        }
                stage ('test') {
                        steps {
                                echo 'test'
                                sh 'mvn test'
                                }
                        }
                      }
                }      
